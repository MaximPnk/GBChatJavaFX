<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.TextField?>

<VBox fx:controller="sample.Controller" xmlns:fx="http://javafx.com/fxml" alignment="center">
    <TextArea fx:id="mainTextArea" VBox.vgrow="ALWAYS" editable="false"/>
    <children>
        <HBox>
            <TextField fx:id="messageArea" minHeight="30" minWidth="500" VBox.vgrow="ALWAYS" onAction="#enterPressed" />
            <Button fx:id="sendButton" minHeight="30" minWidth="100" text="Send" onAction="#btnOneClickAction" />
        </HBox>
    </children>
</VBox>
